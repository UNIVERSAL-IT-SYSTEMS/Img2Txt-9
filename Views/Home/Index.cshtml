@model Img2Txt.Models.ImageToConvert
@{
    ViewData["Title"] = "Home Page";
}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">URL</h3>
  </div>
  <div class="panel-body">
    <form asp-action="convert" asp-controller="home" method="post" asp-ajax="true" post-success="ConvertCompleted(data)">
      <div class="form-group">
        <label asp-for="UrlOfTheImage">URL of the Image</label>
        <input type="url" class="form-control" id="ImageURL" asp-for="UrlOfTheImage" placeholder="Type in the URL to your image">
        <span asp-validation-for="UrlOfTheImage"></span>
      </div>
      <button type="submit" class="btn btn-default">Convert</button>
    </form>  
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Upload</h3>
  </div>
  <div class="panel-body">
    <form id="UploadImage" asp-action="ConvertImage" asp-controller="home" method="post">
      <div class="form-group">
        <label for="ImageURL">Upload the Image</label>
        <input type="file" multiple="multiple" class="form-control" id="FileUpload" accept="image/*">
      </div>
      <button type="submit" class="btn btn-default">Convert</button>
    </form>  
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Drag and Drop</h3>
  </div>
  <div class="panel-body">
    <form>
      <div class="form-group">
      <div id="dragandrophandler">Drag & Drop Files Here</div>
      </div>
    </form>  
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Image Data</h4>
      </div>
      <div class="modal-body">
        <textarea id="DataText" rows="20" class="form-control"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>